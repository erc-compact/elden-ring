params {
    // Base directories
    baseDir         = "/hercules/scratch/fkareem/TRAPUM/NGC6717"
    template_dir    = "${baseDir}/templates"
    pics_model_dir  = "${baseDir}/ML_Models"

    // Input files
    files_list      = "/hercules/scratch/fkareem/New_Elden_Ring/inputfiles.txt"

    // Telescope configuration
    telescope       = "meerkat"  // Options: 'meerkat', 'effelsberg', etc.

    // Generate RFI Filter Parameters
    generateRfiFilter {
        run_rfi_filter       = true  // Set to false to use default RFI filters
        output_path          = "${baseDir}/RFI_Filter"
        target_resolution_ms = 1.0   // Time sample to calculate mean, skew, kurtosis in milliseconds
        script               = "${baseDir}/scripts/rfi_mitigation.py"  // Path to the rfi_mitigation.py script
    }

    // Filtool Parameters
    filtool {
        output_path = "${baseDir}/Filtool"
        rfi_filter_list = [
            effelsberg: "kadaneF 8 4 zdot zap 1430 1490 zap 1550 1560 zap 1620 1630 zap 1750 1860 zap 1980 2000 zap 2100 2150 zap 2190 2200 zap 2238 2242 zap 2250 2280 zap 2300 2335 zap 2400 2480 zap 2500 2600 zap 2600 3000 zap 3930 4010 zap 3650 3660 zap 3680 3700 zap 4240 4350 zap 4230 4240 zap 5220 5250", 
            meerkat: "kadaneF 8 4 zdot"
        ]
    }

    // Dispersion Measure (DM) Plan
    ddplan {
        dm_start  = 0
        dm_end    = 400
        dm_step   = 0.1
        dm_sample = 100
    }

    // Peasoup Parameters
    peasoup {
        output_path         = "${baseDir}/Peasoup"
        min_snr             = 7.0
        acc_start           = -1
        acc_end             = 1
        ram_limit_gb        = 200
        nharmonics          = 4
        ngpus               = 1
        total_cands_limit   = 100000
    }

    // Parse XML Parameters
    parse_xml {
        output_path = "${baseDir}/PulsarX/ParseXML"
        script      = "${baseDir}/scripts/parsexml.py"    // Path to the parsexml.py script
    }

    // Split Candidates Parameters
    splitcands {
        output_path        = "${baseDir}/PulsarX/SplitCands"
        script             = "${baseDir}/scripts/splitcands.py"  // Update with actual script path
        nh                 = 0        // Number of harmonics cut off for candidates to fold
        snr_min            = 9.0      // Minimum SNR for candidates to fold
        ncands             = 1000     // Number of candidates to fold
        cands_per_node     = 96       // Number of candidates to fold per node
        threads            = 48        // Number of threads to use for folding
        clfd               = 2.0      
        template_dir       = "${baseDir}/templates"  // Path to the template directory
    }

    // PsrFold Parameters
    psrfold {
        output_path = "${baseDir}/PulsarX/Fold"
    }
}

profiles {
    hercules {
        includeConfig 'hercules.config'
    }
    edgar {
        includeConfig 'edgar.config'
    }
}
