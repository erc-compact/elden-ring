process {
    executor = 'condor'

    // DADA Process Configuration
    withLabel: 'dada_to_fits' {
        cpus           = 1
        memory        = '200 GB'
        clusterOptions = 'request_gpus = 1'
    }

    // Filtool Process Configuration
    withLabel: 'filtool' {
        cpus           = 20  // Use the maximum available CPUs on Edgar or however many are needed
        // make sure that threads and cpus are the same
        memory         = '200 GB'
        time           = '24h'
    }

    // Parse XML Process Configuration
    withLabel: 'parse_xml' {
        cpus       = 1
        memory     = '5 GB'
        time       = '15m'
    }

    // Peasoup Process Configuration
    withLabel: 'peasoup' {
        cpus           = 1
        memory         = '50 GB'
        clusterOptions = 'request_gpus = 1'
    }

    withLabel: 'birdies' {
        cpus           = 1
        memory         = '55 GB'
        clusterOptions = 'request_gpus = 1'
    }

    // PsrFold Process Configuration
    withLabel: 'psrfold' {
        cpus           = 20
        memory         = '200 GB'
        time           = '7h'
    }

    // Pics Classifier Process Configuration
    withLabel: 'pics_classifier' {
        cpus       = 20
        memory     = '200 GB'
        time       = '4h'
    }

    // Splitcands Process Configuration
    withLabel: 'splitcands' {
        cpus       = 1
        memory     = '10 GB'
    }

    // Readfile Process Configuration
    withLabel: 'readfile' {
        cpus           = 1
        memory         = '10 GB'
    }

    // Generate RFI Filter Process Configuration
    withLabel: 'generate_rfi_filter' {
        cpus           = 60
        memory         = '600 GB'
    }

    // Nearest Power of Two Calculator Process Configuration
    withLabel: 'nearest_power_two_calculator' {
        cpus       = 1
        memory     = '10 GB'
    }

    // Generate DM Files Process Configuration
    withLabel: 'generateDMFiles' {
        cpus       = 1
        memory     = '10 GB'
    }

    // for parfold
    withLabel: 'parfold' {
        cpus           = 20
        memory         = '200 GB'
        errorStrategy = 'ignore'
    }

    // search_fold_merge Process Configuration
    withLabel: 'search_fold_merge' {
        cpus       = 1
        memory     = '5 GB'
        time       = '15m'
    }

    // alpha_beta_gamma_test Process Configuration
    withLabel: 'alpha_beta_gamma_test' {
        cpus       = 4
        memory     = '20 GB'
        time       = '1h'
    }

    // split_filterbank Process Configuration
    withLabel: 'split_filterbank' {
        cpus       = 1
        memory     = '20 GB'
        time       = '1h'
    }

    // merge_filterbanks Process Configuration
    withLabel: 'merge_filterbanks' {
        cpus       = 4
        memory     = '50 GB'
        time       = '12h'
    }

    // segmented_params Process Configuration
    withLabel: 'segmented_params' {
        cpus       = 1
        memory     = '10 GB'
        time       = '15m'
    }

    // candypolice_pulsarx Process Configuration
    withLabel: 'candypolice_pulsarx' {
        cpus           = 20
        memory         = '200 GB'
        time           = '4h'
    }

    // candypolice_presto Process Configuration
    withLabel: 'candypolice_presto' {
        cpus           = 8
        memory         = '64 GB'
        time           = '4h'
    }

    // =========================================================================
    // PRESTO Pipeline Process Configurations
    // =========================================================================

    // PRESTO CPU processes (rfifind, prepdata, prepsubband, prepfold, sifting)
    withLabel: 'presto' {
        cpus           = 8
        memory         = '64 GB'
        time           = '4h'
        errorStrategy  = 'retry'
        maxRetries     = 2
    }

    // PRESTO GPU processes (accelsearch with CUDA)
    withLabel: 'presto_gpu' {
        cpus           = 4
        memory         = '128 GB'
        clusterOptions = 'request_gpus = 1'
        errorStrategy  = 'retry'
        maxRetries     = 2
    }

    // Short PRESTO processes (sifting, PNG conversion, tarball)
    withLabel: 'short' {
        time   = '1h'
    }

    // Medium PRESTO processes (single candidate folding)
    withLabel: 'medium' {
        time   = '2h'
    }

    // Long PRESTO processes (batch folding, dedispersion)
    withLabel: 'long' {
        time   = '8h'
    }

    // PulsarX folding for PRESTO candidates
    withLabel: 'pulsarx' {
        cpus           = 16
        memory         = '64 GB'
        time           = '4h'
        errorStrategy  = 'retry'
        maxRetries     = 2
    }

    // Riptide FFA search processes
    withLabel: 'riptide' {
        cpus           = 20
        memory         = '128 GB'
        time           = '4h'
        errorStrategy  = 'retry'
        maxRetries     = 2
        container      = "${params.riptide_image}"
    }
}

// Define container image paths specific to Edgar cluster
params {
    // Container images for Edgar
    singularity_image_dir = "/fpra/timing/01/fazal/singularity_img"
    pulsarx_image         = "${singularity_image_dir}/pulsarx_latest.sif"
    presto_image          = "${singularity_image_dir}/presto4.sif"
    peasoup_image         = "${singularity_image_dir}/peasoup_sm89.sif"
    psrchive_image        = "${singularity_image_dir}/trapum_pulsarx_fold_docker_20220411.sif"
    rfi_mitigation_image  = "${singularity_image_dir}/rfi-mitigation-nextflow_amd64.sif"
    presto5_image         = "${singularity_image_dir}/presto5_pddot.sif"
    pics_classifier_image = "${singularity_image_dir}/trapum_pulsarx_fold_docker_20220411.sif"
    edd_pulsar_image      = "${singularity_image_dir}/edd_pulsar_250626.0.sif"
    filtools_sig_image    = "${singularity_image_dir}/filtools-image_sig.sif"
    rusty_candypicker     = "${singularity_image_dir}/rusty_candypicker_latest.sif"
    // PrestoZL GPU-accelerated container
    prestozl_image        = "${singularity_image_dir}/prestozl_v1.0.sif"
    // Riptide FFA search container
    riptide_image         = "${singularity_image_dir}/riptide_latest.sif"

    // Number of threads for processes
    threads = 20  // Adjust as per the Edgar cluster's CPU availability

    // Update splitcands threads
    splitcands {
        threads = 20
    }
}

// Singularity configuration for Edgar
apptainer {
        enabled = true
        runOptions = '-B /fpra -B /bEDD -B /homes --nv'
        envWhitelist = 'APPTAINER_BINDPATH, APPTAINER_LD_LIBRARY_PATH'
    }

// Report and trace settings
report {
    overwrite = true
}

trace {
    overwrite = true
}
